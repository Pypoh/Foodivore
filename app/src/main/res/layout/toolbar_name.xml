<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_circle_toolbar"
        android:layout_margin="16dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/person"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tint="@color/grey_300" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/layout_circle_toolbar"
        app:layout_constraintLeft_toRightOf="@id/layout_circle_toolbar"
        app:layout_constraintTop_toTopOf="@id/layout_circle_toolbar">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_name_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Naufal Afif Bunyamin" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_schedule_status_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makan siang dalam 3 jam" />

    </LinearLayout>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_md_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:tint="@color/black_500" />

</androidx.constraintlayout.widget.ConstraintLayout>