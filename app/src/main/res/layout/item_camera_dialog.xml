<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/box_camera_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    -->
    <!--    <com.google.android.material.radiobutton.MaterialRadioButton-->
    <!--        android:id="@+id/radio_camera_dialog"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        android:layout_marginStart="16dp"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_item_title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Sample"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/box_camera_dialog"
        app:layout_constraintTop_toTopOf="@id/box_camera_dialog"
        app:layout_constraintBottom_toBottomOf="@id/box_camera_dialog"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_item_calorie_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="444 kkal"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/image_logo_cal_camera_dialog"
        app:layout_constraintTop_toTopOf="@id/box_camera_dialog"
        app:layout_constraintBottom_toBottomOf="@id/box_camera_dialog"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@+id/image_logo_cal_camera_dialog"
        app:layout_constraintLeft_toLeftOf="@+id/text_item_calorie_dialog"
        app:layout_constraintTop_toBottomOf="@id/text_item_calorie_dialog"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/layout_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_empty">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                app:tint="@color/orange_500" />

        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_item_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="1"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/layout_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_empty">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                app:tint="@color/orange_500" />

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/image_logo_cal_camera_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logo_only"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/box_camera_dialog"
        app:layout_constraintBottom_toBottomOf="@id/box_camera_dialog"/>



</androidx.constraintlayout.widget.ConstraintLayout>