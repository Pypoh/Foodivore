<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="preTestViewModel"
            type="com.example.foodivore.ui.pretest.PreTestViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pretest.PreTestActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_pre_test"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"

            android:contentInsetRight="0dp"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize">

                    <ImageView
                        android:id="@+id/back_arrow_pre_test"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_left" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_pre_test"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Langkah 1 dari 7"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/layout_name_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_name_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Siapa nama anda?"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_name_pre_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name_pre_test"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:inputType="text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_name_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_name_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_height_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_height_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Berapa tinggi anda?"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_input_height_pre_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_height_pre_test"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_height_pre_test"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Cm"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_height_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_input_height_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_weight_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_weight_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Berapa berat badan anda?"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_input_weight_pre_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_weight_pre_test"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_weight_pre_test"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Kg"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_weight_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_input_weight_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_age_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_age_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Berapa umur anda?"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_age_pre_test"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_age_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_age_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_age_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_sex_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_sex_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Apa jenis kelamin anda?"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_input_sex_pre_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_sex_pre_test"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/male_choice_pre_test"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="24dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_male" />

                <ImageView
                    android:id="@+id/female_choice_pre_test"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_female" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sex_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_input_sex_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_active_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_active_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Seberapa sering anda\n berolahraga?"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_active_pre_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_active_pre_test"
                android:layout_marginTop="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_active_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_active_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_purpose_pre_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pre_test">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_purpose_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Apa tujuan anda?"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_purpose_pre_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_purpose_pre_test"
                android:layout_marginTop="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_purpose_pre_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_purpose_pre_test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Selanjutnya"
                android:textAllCaps="false" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>