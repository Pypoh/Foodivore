<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!--        <variable-->
        <!--            name=""-->
        <!--            type="" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.home.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toolbar_home"
                    layout="@layout/toolbar_name" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/header_nutritions_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/orange_200"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar_home">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_header_nutritions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan Nutrisi"
                            android:textColor="@color/black_500"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_recommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="Lihat rekomendasi"
                            android:textAllCaps="false"
                            android:textColor="@color/orange_500"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/piechart_nutrition"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_header_nutritions" />

                        <View
                            android:id="@+id/view_marker_lemak"
                            android:layout_width="24dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="16dp"
                            android:backgroundTint="@color/red_300"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_shape_nutrition"
                            app:layout_constraintBottom_toTopOf="@id/text_protein"
                            app:layout_constraintLeft_toRightOf="@id/view_marker_karb"
                            app:layout_constraintRight_toLeftOf="@id/view_marker_protein"
                            app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_lemak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lemak"
                            app:layout_constraintBottom_toTopOf="@id/text_value_lemak"
                            app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                            app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_value_lemak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13 gram"
                            app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                            app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                            app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

                        <View
                            android:id="@+id/view_marker_karb"
                            android:layout_width="24dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_shape_nutrition"
                            android:backgroundTint="@color/orange_300"
                            app:layout_constraintBottom_toTopOf="@id/text_protein"
                            app:layout_constraintLeft_toRightOf="@id/piechart_nutrition"
                            app:layout_constraintRight_toLeftOf="@id/view_marker_lemak"
                            app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_karb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karb"
                            app:layout_constraintBottom_toTopOf="@id/text_value_karb"
                            app:layout_constraintLeft_toLeftOf="@id/view_marker_karb"
                            app:layout_constraintRight_toRightOf="@id/view_marker_karb" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_value_karb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56 gram"
                            app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                            app:layout_constraintLeft_toLeftOf="@id/view_marker_karb"
                            app:layout_constraintRight_toRightOf="@id/view_marker_karb" />

                        <View
                            android:id="@+id/view_marker_protein"
                            android:layout_width="24dp"
                            android:layout_height="12dp"
                            android:backgroundTint="@color/green_300"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_shape_nutrition"
                            app:layout_constraintBottom_toTopOf="@id/text_protein"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Protein"
                            app:layout_constraintBottom_toTopOf="@id/text_value_protein"
                            app:layout_constraintLeft_toLeftOf="@id/view_marker_protein"
                            app:layout_constraintRight_toRightOf="@id/view_marker_protein" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_value_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="36 gram"
                            app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                            app:layout_constraintLeft_toLeftOf="@id/view_marker_protein"
                            app:layout_constraintRight_toRightOf="@id/view_marker_protein" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_title_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="LAYANAN"
                    android:textColor="@color/black_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_nutritions_home" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_feature_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toTopOf="@id/text_title_food_trend"
                    app:layout_constraintTop_toBottomOf="@id/text_title_feature" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_title_food_trend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="MENU MAKANAN"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/recycler_food_trend_home"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recycler_feature_home" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_food_trend_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toTopOf="@id/text_title_food_catalogue"
                    app:layout_constraintTop_toBottomOf="@id/text_title_food_trend" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_title_food_catalogue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="OLAHAN DAGING"
                    android:textColor="@color/black_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/recycler_food_catalogue_home"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recycler_food_trend_home" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_food_catalogue_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title_food_catalogue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>