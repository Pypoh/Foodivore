                    app:layout_constraintBottom_toTopOf="@id/text_protein"
                    app:layout_constraintLeft_toRightOf="@id/piechart_nutrition"
                    app:layout_constraintRight_toLeftOf="@id/view_marker_lemak"
                    app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

