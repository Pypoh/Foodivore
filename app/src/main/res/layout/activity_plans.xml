<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="plansViewModel"
            type="com.example.foodivore.ui.main.plans.PlansViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.plans.PlansFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_plans"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:titleTextColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="?attr/actionBarSize">

                        <ImageView
                            android:id="@+id/back_arrow_plans"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_left"
                            app:tint="@color/black_500" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/title_discussion"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toRightOf="@id/back_arrow_plans"
                            android:text="Plans"
                            android:textColor="@color/black_500" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_total_calorie_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Kalori"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_bar_plans"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:progress="25"
                    android:scaleY="4"
                    app:layout_constraintTop_toBottomOf="@id/text_total_calorie_plans" />

                <!-- Nutritions Tab -->

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_nutrition"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_plans" />

                <View
                    android:id="@+id/view_marker_lemak"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shape_nutrition"
                    android:backgroundTint="@color/red_300"
                    app:layout_constraintBottom_toTopOf="@id/text_protein"
                    app:layout_constraintLeft_toRightOf="@id/view_marker_karb"
                    app:layout_constraintRight_toLeftOf="@id/view_marker_protein"
                    app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_lemak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemak"
                    app:layout_constraintBottom_toTopOf="@id/text_value_lemak"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                    app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_value_lemak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 gram"
                    app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                    app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

                <View
                    android:id="@+id/view_marker_karb"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shape_nutrition"
                    android:backgroundTint="@color/orange_300"
                    app:layout_constraintBottom_toTopOf="@id/text_protein"
                    app:layout_constraintLeft_toRightOf="@id/piechart_nutrition"
                    app:layout_constraintRight_toLeftOf="@id/view_marker_lemak"
                    app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_karb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karb"
                    app:layout_constraintBottom_toTopOf="@id/text_value_karb"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_karb"
                    app:layout_constraintRight_toRightOf="@id/view_marker_karb" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_value_karb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 gram"
                    app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_karb"
                    app:layout_constraintRight_toRightOf="@id/view_marker_karb" />

                <View
                    android:id="@+id/view_marker_protein"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shape_nutrition"
                    android:backgroundTint="@color/green_300"
                    app:layout_constraintBottom_toTopOf="@id/text_protein"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    app:layout_constraintBottom_toTopOf="@id/text_value_protein"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_protein"
                    app:layout_constraintRight_toRightOf="@id/view_marker_protein" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_value_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 gram"
                    app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_protein"
                    app:layout_constraintRight_toRightOf="@id/view_marker_protein" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu_plans"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:hint="Filter Jadwal"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/menu_auto_complete_plans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_calendar_date_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/button_calendar_plans"
                    app:layout_constraintRight_toLeftOf="@id/button_calendar_plans"
                    app:layout_constraintTop_toTopOf="@id/button_calendar_plans" />

                <ImageView
                    android:id="@+id/button_calendar_plans"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_event_24px_1"
                    app:layout_constraintBottom_toBottomOf="@id/menu_plans"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/menu_plans" />

                <androidx.recyclerview.widget.RecyclerView
