    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.plans.PlansFragment">

        <include
            android:id="@+id/toolbar_plans"
            layout="@layout/toolbar_white"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_plans">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chart_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_total_calorie_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Kalori"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_bar_plans"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:scaleY="4"
                    app:layout_constraintTop_toBottomOf="@id/text_total_calorie_plans"
                    android:progressTint="@color/orange_500"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/progress_value_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 0 kal"
                    app:layout_constraintRight_toRightOf="@id/progress_bar_plans"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_plans" />

                <!-- Nutritions Tab -->

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_nutrition"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_plans" />

                <View
                    android:id="@+id/view_marker_lemak"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shape_nutrition"
                    android:backgroundTint="@color/red_300"
                    app:layout_constraintBottom_toTopOf="@id/text_protein"
                    app:layout_constraintLeft_toRightOf="@id/view_marker_karb"
                    app:layout_constraintRight_toLeftOf="@id/view_marker_protein"
                    app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_lemak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemak"
                    app:layout_constraintBottom_toTopOf="@id/text_value_lemak"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                    app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_value_lemak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 gram"
                    app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                    app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                    app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

