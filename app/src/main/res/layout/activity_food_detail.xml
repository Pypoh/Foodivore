<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.food.FoodDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_food_detail"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:src="@color/orange_500"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title_food_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Bakso Sapi"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_food_detail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_nutrition_food_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_title_food_detail">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart_nutrition"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_marker_lemak"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_shape_nutrition"
                app:layout_constraintBottom_toTopOf="@id/text_protein"
                app:layout_constraintLeft_toRightOf="@id/view_marker_karb"
                app:layout_constraintRight_toLeftOf="@id/view_marker_protein"
                app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_lemak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lemak"
                app:layout_constraintBottom_toTopOf="@id/text_value_lemak"
                app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_value_lemak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 gram"
                app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                app:layout_constraintLeft_toLeftOf="@id/view_marker_lemak"
                app:layout_constraintRight_toRightOf="@id/view_marker_lemak" />

            <View
                android:id="@+id/view_marker_karb"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_shape_nutrition"
                app:layout_constraintBottom_toTopOf="@id/text_protein"
                app:layout_constraintLeft_toRightOf="@id/piechart_nutrition"
                app:layout_constraintRight_toLeftOf="@id/view_marker_lemak"
                app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_karb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karb"
                app:layout_constraintBottom_toTopOf="@id/text_value_karb"
                app:layout_constraintLeft_toLeftOf="@id/view_marker_karb"
                app:layout_constraintRight_toRightOf="@id/view_marker_karb" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_value_karb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56 gram"
                app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                app:layout_constraintLeft_toLeftOf="@id/view_marker_karb"
                app:layout_constraintRight_toRightOf="@id/view_marker_karb" />

            <View
                android:id="@+id/view_marker_protein"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_shape_nutrition"
                app:layout_constraintBottom_toTopOf="@id/text_protein"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/piechart_nutrition" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                app:layout_constraintBottom_toTopOf="@id/text_value_protein"
                app:layout_constraintLeft_toLeftOf="@id/view_marker_protein"
                app:layout_constraintRight_toRightOf="@id/view_marker_protein" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_value_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36 gram"
                app:layout_constraintBottom_toBottomOf="@id/piechart_nutrition"
                app:layout_constraintLeft_toLeftOf="@id/view_marker_protein"
                app:layout_constraintRight_toRightOf="@id/view_marker_protein" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/border_nutrition"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="#707070"
            app:layout_constraintTop_toBottomOf="@id/layout_nutrition_food_detail" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_portion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Jumlah Porsi"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_nutrition" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/text_portion"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_portion">

            <!--            <ImageView-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:src="@color/orange_500"/>-->

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp" />

            <!--            <ImageView-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:src="@color/orange_500"/>-->
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Ukuran Porsi"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_portion" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="100 gr"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_size" />

        <!--        <com.google.android.material.textview.MaterialTextView-->
        <!--            android:id="@+id/text_nutrition_information_food_detail"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textSize="16sp"-->
        <!--            android:textStyle="bold"-->
        <!--            android:text="Informasi Gizi"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/text_size"-->
        <!--            android:layout_marginTop="16dp"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            app:layout_constraintLeft_toLeftOf="parent"/>-->

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/recycler_nutrition_food_detail"-->
        <!--            android:layout_marginTop="16dp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/text_nutrition_information_food_detail"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>